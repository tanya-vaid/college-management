<%- include('../templates/aheader') %>
<div class="mf bg-info bg-gradient">
 <div class="hp2">
<div class="container signup">
  <p>Student Update Form</p>
  <hr class="hr1">
   <form action="/admin/student_edit_eno" method="post">
    <div class="form-group">
      <label for="eno">Enter Enrollment Number</label>
      <input
        type="text"
        name="eno"
        id="eno"
        class="form-control"
        placeholder="Enter enrollment number"
         value="<%= stu.eno %>"
      />
    </div>
    <br>
    <button class="btn btn-success w-100 bt" type="submit">Find</button>
   </form>

  <form action="/admin/student_edit" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        class="form-control"
        placeholder="Enter name"
        value="<%= stu.name %>"
      />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        class="form-control"
        placeholder="Enter email"
         value="<%= stu.email %>"
      />
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      <input
        type="text"
        rows="6"
        name="address"
        id="address"
        class="form-control"
        value="<%= stu.address %>"
       /> 
    </div>

    <div class="form-group">
      <label for="course" >Select Course</label>
      <select name="course" id="course" selected="<%= stu.course %>">
        
        <option value="diploma">Polytechnic</option>
        <option value="ba" >B.A.</option>
        <option value="bcom">B.Com.</option>
        <option value="bsc">B.Sc.</option>
        <option value="bca">B.C.A.</option>
        <option value="mca">M.C.A.</option>
        <option value="btech">B.Tech.</option>
        <option value="mtech">M.Tech.</option>
      </select>
    </div>

    <div class="form-group">
      <label for="streme">Select Streme</label>
      <select name="streme" id="streme">
        <option value="commerce">Commerce</option>
        <option value="sciencenm">Science Non Med</option>
        <option value="sciencem">Science Med</option>
        <option value="arts">Arts</option>
        <option value="computers">Computers</option>
        <option value="mechanical">Mechanical</option>
        <option value="electrical">Electrical</option>
        <option value="civil">Civil</option>
      </select>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        placeholder="Enter password"
         value="<%= stu.password %>"
      />
    </div>
    <input type="hidden" name="eno"
     value="<%= stu.eno %>"
    >
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>
</div>
</div>
<%- include('../templates/afooter') %>
<script src="/js/jquery.js"></script>
<script>
   
  $(document).ready(function () {
   
    
    $("#course").change(function () {
      var cr = $("#course").val();
      $('#streme').empty()
      $('#select2').append('<option value="default">Select an option</option>');
      if (cr == "diploma") {
        $("#streme").append(new Option("Mech","mech"));
        $("#streme").append(new Option("Elect","elect"));
        $("#streme").append(new Option("Civil","civil"));
        $("#streme").append(new Option("Computer","computer"));
      }
      else if(cr == "ba") {
        $("#streme").append(new Option("Commerce","commerce"));
         
      }
     
      
    }).change();
    
    $('#course').val('<%= stu.course %>')
    $('#streme').val('<%= stu.streme %>')
  
  });
</script>

